import java.util.Scanner;

class AreaOfCircle {
    public static void main(String[] args) {
    	
        Scanner s = new Scanner(System.in);
    	
    	int r;
    	double pi = 3.14, area;
    	System.out.print("Enter Radius of Circle: ");
        r = s.nextInt();
        area = (pi * r * r);
        System.out.println("The Area of Circle is: " + area);
    }
}

